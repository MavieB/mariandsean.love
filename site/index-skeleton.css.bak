body {
  font-family: Nunito;
  color: #000000;
  padding: 0;
  margin: 0;

  background-image: url('./images/circles-light.png');
  background-repeat: repeat;
}

a, a:visited {
  color: #000000  ;
}

h1 {
  margin-top: 0.2rem;
}

.cursive {
  font-family: 'Sacramento', cursive;
  color: #ffffff;
  font-size: 300%;
  text-shadow: 3px 3px 3px #000000;
}

.left-bubble, .center-bubble {
  background-color: rgba(0, 0, 0, 0.5);
  padding: 1rem;
  border-radius: 5px;
  width: 400px;
}

.center-bubble {
  max-width: 600px;
}

/***** Backgrounds *****/

.background-section {
  padding: 1rem;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

#section0 {
  background-image: url(./images/Sean-und-Mari.jpg);
  background-position: top;
  height: 100%;
}

#section1 {
  margin: 0 auto;
  padding: 1rem;
  text-align: center;

  /* position: relative; */
  /* bottom: 20px; */

}

#section1 p {
  margin: 0 0 1rem 0;
}

@media only screen and (max-width: 768px) {
  body {
    font-size: 100%;
  }

  #section0: {

  }

  #section1 {
    background-color: rgba(128, 0, 128, 0.5);
    padding: 1rem;
    text-align: center;
    width: 100%;
    left: 0;
    bottom: 0;
    border-radius: 0;
  }
}

