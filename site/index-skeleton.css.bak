.cards {
  max-width: 960px;
  margin: 0 auto 30px;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  grid-gap: 30px;
}

#section2-left, #section-right {
  position: relative;
}

.article-img {
  width: 400px;
  object-fit: cover;
  border-radius: 5px;
}

.article-title {
  color: #000000;
}





@media (min-width: 700px) {
 .leading {
    display: flex;
    align-items: center;
  }
}

.leading {
  max-width: 960px;
  margin: 3rem auto 0;
}
